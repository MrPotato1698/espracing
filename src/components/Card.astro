---
interface Props {
	title: string;
	subtitle: string;
	body: string;
	imgbg: string;
	linkbutton: string;
  buttonname: string;
  altimg: string;
  targetpage: string;
}

const { title, subtitle, body, imgbg, linkbutton, buttonname, altimg, targetpage } = Astro.props;
---

<a href={linkbutton} target={targetpage} class="group relative block bg-[#0f0f0f]">
  {<img
    alt = {altimg}
    src = {imgbg}
    class = "absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50 rounded-lg"
  />}

  <div class = "relative p-4 sm:p-6 lg:p-8">
    <p class = "text-sm font-medium uppercase tracking-widest text-gray-200 w-fit px-1">{subtitle}</p>

    <p class = "text-xl font-bold text-white sm:text-2xl">{title}</p>

    <div class = "mt-32 sm:mt-48 lg:mt-64">
      <div class = "translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100">
        <p class = "text-sm text-white">{body}</p>
        <p class = "inline-block rounded border border-[#da392b] bg-[#da392b] mt-1 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-white focus:outline-none focus:ring active:text-[#da392b]">
          {buttonname}
        </p>

      </div>
    </div>
  </div>
</a>

<style>
  a > img {
    mask-image: linear-gradient(#0f0f0f 80%, transparent);
  }
