---
import Chevron from "./Chevron.astro";
---

<!-- Nombre Inicial + Redes -->
<header class="flex flex-row-reverse z-20 md:flex-none">
  <div class="flex gap-6 mr-4">
    <a
      href="https://twitter.com/EspRacingCom" target="_blank">
      <img class="w-8 .p-2 invert" src="/public/img/social/brand-x.svg" alt="Twitter ESP Racing" />
    </a>

    <a
      href="https://www.instagram.com/espsimracingoficial/"
      target="_blank"
    >
      <img class="w-8 .p-2 invert" src="/public/img/social/brand-instagram.svg" alt="Instagram ESP Racing" />
    </a>

    <a
      href="https://www.paypal.com/es/home"
      target="_blank"
    >
      <img class="w-8 .p-2 invert" src="/public/img/social/brand-paypal.svg" alt="Paypal ESP Racing" />
    </a>
  </div>

  <div class="flex gap-6 mr-4 md:flex-row">
    <a
      href="https://discord.gg/hjawMXGU6k"
      target="_blank"
    >
      <img class="w-8 .p-2 invert" src="/public/img/social/brand-discord.svg" alt="Discord ESP Racing" />
    </a>

    <a
      href="https://www.youtube.com/@esp-racing-com-es"
      target="_blank"
    >
      <img class="w-8 .p-2 invert" src="/public/img/social/brand-youtube.svg" alt="Youtube ESP Racing" />
    </a>

    <a
      href="https://www.twitch.tv/sergig_"
      target="_blank"
    >
      <img class="w-8 .p-2 invert" src="/public/img/social/brand-twitch.svg" alt="Twitch ESP Racing" />
    </a>
  </div>
</header>

