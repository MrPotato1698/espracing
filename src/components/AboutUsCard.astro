---
interface Props {
	title: string;
	body: string;
	imgbg: string;
  altimg: string;
}

const { title, body, imgbg, altimg } = Astro.props;
---

<a class="block">
  <img
    alt= {altimg}
    src= {imgbg}
    class="h-64 w-full object-cover sm:h-80 lg:h-96"
  />

  <h3 class="mt-4 text-lg font-bold text-gray-900 sm:text-xl">{title}</h3>

  <p class="mt-2 max-w-sm text-gray-700">
    {body}
  </p>
</a>