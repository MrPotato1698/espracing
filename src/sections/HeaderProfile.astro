import ESPRacing from "@/assets/imgresource/ESPRACINGLogo.webp";
import Chevron from "@/icons/Chevron.astro";


const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return redirect("/login");
}

const { data, error } = await supabase.auth.setSession({
  refresh_token: refreshToken.value,
  access_token: accessToken.value,
});

if (error) {
  cookies.delete("sb-access-token", {
    path: "/",
  });
  cookies.delete("sb-refresh-token", {
    path: "/",
  });

  return redirect("/login");
}

const idAuth = data?.user?.id || "";

const {data:messageSearchQuery} = await supabase
  .from("message")
  .select('*', {count: 'exact', head:false })
  .eq("name_receiver", idAuth)
  .eq("readed", false);

const {data: teamApplicationSearchQuery} = await supabase
  .from("teamsapplication")
  .select('*', {count: 'exact', head:false })
  .eq("team_manager", idAuth);

const messageCount = (messageSearchQuery?.length ?? 0) + (teamApplicationSearchQuery?.length ?? 0);

const {data: rolUser} = await supabase
  .from("profiles")
  .select("roleesp")
  .eq("id", idAuth)
  .single();

if(rolUser === null) {
  return redirect("/");
}

const adminZone: boolean = rolUser && rolUser.roleesp !== null && rolUser.roleesp <= 1 ? true : false;
