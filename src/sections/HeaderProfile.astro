<script>
  function setupSidebar() {
    const button = document.getElementById('sidebarButton');
    const sidebar = document.getElementById('sidebar');
    const arrowIcon = document.getElementById('arrowIcon');
    let isOpen = false;

    // Función para manejar cambios de tamaño
    function handleResize() {
      if (window.innerWidth >= 640) { // 640px es el breakpoint 'sm' de Tailwind
        if (sidebar) sidebar.style.transform = 'translateX(0)';
        if (button) button.style.left = '0';
        isOpen = false;
      } else {
        if (sidebar) sidebar.style.transform = 'translateX(-100%)';
        if (button) button.style.left = '0';
        if (arrowIcon) arrowIcon.style.transform = 'rotate(0)';
        isOpen = false;
      }
    }

    if (button && sidebar && arrowIcon) {
      button.addEventListener('click', () => {
        isOpen = !isOpen;
        sidebar.style.transform = isOpen ? 'translateX(0)' : 'translateX(-100%)';
        arrowIcon.style.transform = isOpen ? 'rotate(180deg)' : 'rotate(0)';
        button.style.left = isOpen ? '256px' : '0';
      });

      // Escuchar cambios de tamaño
      window.addEventListener('resize', handleResize);
    }

    // Ejecutar al inicio
    handleResize();
  }

  function setupDropdown() {
    const dropdownButton = document.querySelector('[data-collapse-toggle="dropdown-sales"]');
    const dropdownContent = document.getElementById('dropdown-sales');
    const dropdownItems = dropdownContent?.querySelectorAll('li');
    const chevron = document.querySelector('[data-collapse-toggle="dropdown-sales"] svg:last-child') as HTMLElement;
    let isDropdownOpen = false;

    if (dropdownButton && dropdownContent && dropdownItems) {
      dropdownButton.addEventListener('click', () => {
        isDropdownOpen = !isDropdownOpen;

        if (isDropdownOpen) {
          dropdownContent.classList.remove('hidden');
          dropdownContent.classList.add('animate-dropdown');

          // Animar cada elemento individualmente
          dropdownItems.forEach((item, index) => {
            const li = item as HTMLElement;
            li.style.opacity = '0';
            li.style.transform = 'translateY(-20px)';
            setTimeout(() => {
              li.style.transition = 'all 0.3s ease';
              li.style.opacity = '1';
              li.style.transform = 'translateY(0)';
            }, index * 100); // Retraso incremental para cada item
          });
        } else {
          // Animar ocultamiento en orden inverso
          Array.from(dropdownItems).reverse().forEach((item, index) => {
            const li = item as HTMLElement;
            setTimeout(() => {
              li.style.opacity = '0';
              li.style.transform = 'translateY(-20px)';
            }, index * 100);
          });

          // Ocultar el dropdown después de que termine la animación
          setTimeout(() => {
            dropdownContent.classList.add('hidden');
            dropdownContent.classList.remove('animate-dropdown');
          }, dropdownItems.length * 100);
        }

        // Rotar chevron
        if (chevron) {
          chevron.style.transform = isDropdownOpen ? 'rotate(180deg)' : 'rotate(0)';
          chevron.style.transition = 'transform 0.5s ease';
        }
      });
    }
  }

  setupSidebar();
  setupDropdown();

  document.addEventListener('astro:page-load', setupSidebar);
  document.addEventListener('astro:page-load', setupDropdown);
</script>

