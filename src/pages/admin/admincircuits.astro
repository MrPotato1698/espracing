---
import Layout from "@/layouts/ProfileLayout.astro";
import { supabase } from "@/db/supabase";
import Trash from "@/icons/Trash.astro";
import Edit from "@/icons/Edit.astro";

const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return redirect("/login");
}

// Set the session with the cookies
const { data: dataAuth, error: errorAuth } = await supabase.auth.setSession({
  refresh_token: refreshToken.value,
  access_token: accessToken.value,
});

// If there is an error, delete the cookies and redirect to login
if (errorAuth) {
  cookies.delete("sb-access-token", {
    path: "/",
  });
  cookies.delete("sb-refresh-token", {
    path: "/",
  });

  return redirect("/login");
}

const id = dataAuth?.user?.id || "";

const { data: userData } = await supabase
  .from("profiles")
  .select("roleesp")
  .eq("id", id)
  .single();

if (userData?.roleesp !== 1) {
  return redirect("/index");
}


// get_circuit_layouts_count (función Supabase)
//   SELECT c.id, c.name, c.location, COUNT(cl.id) AS layouts_count
//   FROM circuit c
//   LEFT JOIN circuitLayout cl ON c.id = cl.circuit
//   GROUP BY c.id;
const { data: circuitData, error: circuitDataError } = await supabase
  .rpc('get_circuit_layouts_count');

if(circuitDataError) {
  console.error(circuitDataError);
}

---

<Layout title="ESP Racing: Administrar Circuitos">
  <h2 class="text-5xl font-extrabold border-b-2 border-primary w-full">
    Administración de Circuitos
  </h2>

  <div class="py-4 mx-auto text-center" style="width: 99%">
    <p class="text-5xl font-bold border-b border-primary w-fit mx-auto">
      Lista de Carreras del Sistema
    </p>
    <table class="mt-6 w-full border-collapse border border-lightPrimary">
      <thead class="font-medium bg-primary">
        <tr>
          <th>Nº</th>
          <th>Nombre</th>
          <th>Lugar</th>
          <th>Nº Layouts</th>
          <th>Editar</th>
          <th>Eliminar</th>
        </tr>
      </thead>
      <tbody>
        {
          circuitData?.map((circuit, index) => (
            <tr class="bg-darkSecond">
              <td class="font-semibold">{index + 1}</td>
              <td>{circuit.circuit_name}</td>
              <td>{circuit.circuit_location}</td>
              <td>{circuit.layouts_count}</td>
              <td>
                <a href={`/admin/race/${circuit.circuit_id}`}>
                  <Edit moreClass="w-6 text-center mx-auto" />
                </a>
              </td>
              <td>
                <button class="align-middle delete-race" data-id={circuit.circuit_id}>
                  <Trash moreClass="w-6 text-center mx-auto" />
                </button>
              </td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </div>

  <div class="py-4 mx-auto text-center" style="width: 99%">
    <p class="text-5xl font-bold border-b border-primary w-fit mx-auto">
      Añadir Nuevo Circuito
    </p>

    <div
      class="box-border p-5 m-auto bg-darkPrimary rounded-md max-w-screen-2xl border border-primary"
    >
      <form id="uploadForm" data-astro-reload>
        <div class="mb-6 p-6 border-2 border-primary rounded-lg bg-darkSecond">
          <div class="mb-4">
            <label for="fileInput" class="block text-lightPrimary text-lg font-semibold mb-3">
              Arrastra la carpeta del circuito aquí
            </label>
            <div class="relative">
              <input
                type="file"
                id="fileInput"
                name="fileInput"
                class="opacity-0 absolute inset-0 w-full h-full cursor-pointer"
              />
              <div class="flex items-center justify-between p-4 border-2 border-dashed border-primary rounded-lg bg-darkSecond text-lightPrimary">
                <div class="flex items-center gap-2">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                  <span class="text-sm font-medium">Arrastra y suelta tu carpeta aquí</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <label class="text-lightPrimary text-lg font-medium" for="circuitshotname">
          Nombre corto del circuito
        </label>
        <input
          class="w-full p-3 border border-solid border-lightSecond rounded-md mt-2 mb-4 resize-y text-white bg-darkSecond hover:border-primary"
          type="text"
          id="circuitshotname"
          name="circuitshotname"
          placeholder="ej: Hockenheimring Baden-Württemberg -> Hockenheim"
        />

        <div class="flex items-center gap-2">
          <label class="relative inline-flex cursor-pointer">
            <input id="switch-clean_install" type="checkbox" class="peer sr-only" />
            <label for="switch-clean_install" class="hidden"></label>
            <div
              class="peer h-4 w-11 rounded-full border bg-slate-200 after:absolute after:-top-1 after:left-0 after:h-6 after:w-6 after:rounded-full after:border after:border-gray-300 after:bg-white after:transition-all after:content-[''] peer-checked:bg-primary peer-checked:after:translate-x-full peer-focus:ring-primary"
            >
            </div>
          </label>
          <label class="text-lightPrimary text-lg font-medium" for="switch-clean_install">
            Instalación limpia
          </label>
          <lable class = "text-lightSecond text-sm from-thin">
          *(Recomendado activar para actualización de circuitos ya en el sistema)
        </lable>
        </div>

        <input
          class="bg-primary text-white font-bold py-3 px-5 border-solid border-primary border-2 rounded-md hover:bg-darkSecond hover:text-lightPrimary mt-4"
          type="submit"
          value="Añadir"
        />
        <div id="fileInfo" class="mb-4 hidden">
          <p class="text-sm text-lightPrimary bg-darkPrimary p-3 rounded-lg border border-primary">
            Información del circuito:
          </p>
          <div id="fileName"></div>
        </div>
      </form>
    </div>
  </div>
</Layout>

<script>
  import {
    initCircuitManagement,
    initDeleteCircuitButtons,
  } from "@/lib/admin/circuits/circuitManagment";

  initCircuitManagement();

  document.addEventListener("astro:page-load", initCircuitManagement);
  document.addEventListener("astro:page-load", initDeleteCircuitButtons);
</script>