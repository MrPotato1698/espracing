---
import Layout from "@/layouts/ProfileLayout.astro";
import { supabase } from "@/db/supabase";
import DriverAvatarUpload from "@/components/DriverAvatarUpload";

const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (!accessToken || !refreshToken) {
  return redirect("/login");
}

// Set the session with the cookies
const { data: dataAuth, error: errorAuth } = await supabase.auth.setSession({
  refresh_token: refreshToken.value,
  access_token: accessToken.value,
});

// If there is an error, delete the cookies and redirect to login
if (errorAuth) {
  cookies.delete("sb-access-token", {
    path: "/",
  });
  cookies.delete("sb-refresh-token", {
    path: "/",
  });

  return redirect("/login");
}

const id = dataAuth?.user?.id || "";

// Get user data
const { data: userData } = await supabase
  .from("profiles")
  .select("id, full_name, steam_id, avatar")
  .eq("id", id)
  .single();
---

<Layout title="ESP Racing: Modificar datos">
  <h2 class="text-5xl font-bold border-b border-primary w-fit mx-auto">
    Modificar Perfil
  </h2>
  <form
    id="profileForm"
    class="flex flex-col mt-5"
  >
    <label class="mt-5 text-lg font-semibold" for="name">Nombre:</label>
    <input
      type="text"
      name="name"
      value={userData?.full_name?.toString() ?? "No hay nombre"}
      class="bg-darkSecond text-lightPrimary text-lg w-11/12 border-none rounded-md p-2 ml-1 mt-px"
    />

    <label class="mt-5 text-lg font-semibold" for="steam_id">Steam ID:</label>
    <input
      type="text"
      name="steam_id"
      value={userData?.steam_id.toString() ?? "No hay Steam ID"}
      class="bg-darkSecond text-lightPrimary text-lg w-11/12 border-none rounded-md p-2 ml-1 mt-px"
    />
    <input type="hidden" name="id" value={userData?.id} />

    <div>
      <button
        type="submit"
        class="py-1.5 px-3 w-fit mr-2 bg-darkPrimary text-white border-[#29dd38] border-2 rounded-md my-4 font-medium text-lg hover:bg-[#29dd38] hover:text-darkPrimary"
      >
        Aceptar
      </button>
      <button
        type="button"
        onclick="window.location.href = '/myprofile'"
        class="py-1.5 px-3 w-fit bg-darkPrimary text-white border-primary border-2 rounded-md my-4 font-medium text-lg hover:bg-primary hover:text-darkPrimary"
      >
        Cancelar / Volver
      </button>
    </div>
  </form>

    <div class="w-11/12">
    <DriverAvatarUpload
      client:load
      driverId={id}
      currentAvatarUrl={userData?.avatar || "https://tavjuyhbdqnkgsosdymq.supabase.co/storage/v1/object/public/avatars//default.webp"}
      onUploadComplete={(imageUrl: string) => {
        console.log("Upload complete:", imageUrl)
        return null;
      }}
    />
  </div>
</Layout>

<script>
import { showToast } from "@/lib/utils";

  const form = document.getElementById('profileForm');

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form as HTMLFormElement);

      try {
        const response = await fetch('/api/datamodification/modprofile', {
          method: 'POST',
          body: formData,
        });

        if (!response.ok) {
          const errorData = await response.json();
          console.error('Error response:', errorData);
          showToast('Error al actualizar el perfil: ' + (errorData.message || 'Error desconocido'), 'error');
          throw new Error(errorData.message || 'Error al actualizar el perfil');
        }

        // Redireccionar a myprofile tras éxito
        showToast('Perfil actualizado con éxito', 'success');
        window.location.href = '/myprofile';
      } catch (error) {
        console.error('Error:', error);
        showToast('Error al actualizar el perfil: '+error, 'error');
      }
    });
  }
</script>