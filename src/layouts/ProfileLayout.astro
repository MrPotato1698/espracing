---
import Header from "@/sections/HeaderProfile.astro";
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";

import  SpeedInsights  from "@vercel/speed-insights/astro"

// Supports weights 100-900
import '@fontsource-variable/montserrat';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class = "bg-darkPrimary" lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <Header />
    <main class="pt-4 px-3 sm:ml-64">
      <slot />
      <script>
        import { showToast, checkAndShowSavedToast, type ToastType } from '@/lib/utils';

        declare global {
          interface Window {
            showToast: (message: string, type: 'success' | 'error' | 'warning' | 'info') => void;
            checkAndShowSavedToast: typeof checkAndShowSavedToast;
          }
        }
        window.showToast = showToast;
        window.checkAndShowSavedToast = checkAndShowSavedToast;
        document.addEventListener('DOMContentLoaded', checkAndShowSavedToast);
      </script>
    </main>

  </body>
</html>

<style is:global>
  html {
		color-scheme: dark light;
    font-family: 'Montserrat Variable', sans-serif;
  }
</style>
